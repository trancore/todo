{
  // コンパイルする際のオプションを記述
  "compilerOptions": {
    // 出力するJSのバージョン
    "target": "ES2017",
    // コンパイルする際に使用する組み込みライブラリ
    // "lib": [],
    // 出力するJSのモジュールの仕組み
    "module": "ESNext",
    // .jsと.jsxもコンパイル対象にするか
    "allowJs": false,
    // tsxファイルをjsxやjsにコンパイルする際の出力形式
    // "jsx": "",
    // コンパイル結果の表示有無
    "noEmit": true,
    // コンパイル対象のファイル間の関係性を一切無視して、全てのファイルを単一のモジュールとしてコンパイルするか
    "isolatedModules": true,
    // 厳格な型チェックを行うか
    "strict": true,
    // 暗黙的にanyになる値をエラーにするか
    "noImplicitAny": true,
    // fallthroughなcaseのうち、1行以上処理が存在しているにも関わらず脱出処理が無いものエラーにするか
    "noFallthroughCasesInSwitch": true,
    // import時にファイルパスの大文字小文字を区別するか
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["apps/api/src/@types", "node_modules/@types"]
    // non-relativeなimportにおいて、相対的なカレントディレクトリの指定
    // "baseUrl": "",
    // "paths": {
    //   "": [""]
    // }
  },
  // コンパイルする対象ファイル
  "include": ["apps/api/src/**/*"],
  // includeで指定したファイルから特別に除外するファイル
  // "exclude": []
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
